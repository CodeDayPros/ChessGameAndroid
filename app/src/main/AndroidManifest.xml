<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="chess.chessgame">

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:theme="@style/AppTheme" android:name=".MainApplication">
        <activity android:name=".MainGame">
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="SampleGame"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
